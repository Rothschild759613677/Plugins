<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/second_btn_start_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start_service" />


    <Button
        android:id="@+id/second_btn_send_broadcast_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send_broadcast_to_host" />

    <Button
        android:id="@+id/second_btn_send_broadcast_dynamic_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send_broadcast_dynamic_local" />

    <Button
        android:id="@+id/second_btn_send_broadcast_static_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send_broadcast_static_local" />


</LinearLayout>